<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ComponentTemplate xmlns="http://www.siveco.ro/senro/ComponentTemplate" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Layout>
        <Grid id="SimpleList" name="SimpleList">
            <Columns>
                <Column>
                    <Alignment>Left</Alignment>
                    <Resize>0.0</Resize>
                    <Size>
                        <Component>Default</Component>
                    </Size>
                </Column>
            </Columns>
            <Rows>
                <Row>
                    <Alignment>Center</Alignment>
                    <Resize>0.0</Resize>
                    <Size>
                        <Component>Default</Component>
                    </Size>
                </Row>
                <Row>
                    <Alignment>Center</Alignment>
                    <Resize>0.0</Resize>
                    <Size>
                        <Component>Default</Component>
                    </Size>
                </Row>
                <Row>
                    <Alignment>Center</Alignment>
                    <Resize>0.0</Resize>
                    <Size>
                        <Component>Default</Component>
                    </Size>
                </Row>
                <Row>
                    <Alignment>Center</Alignment>
                    <Resize>0.0</Resize>
                    <Size>
                        <Component>Default</Component>
                    </Size>
                </Row>
                <Row>
                    <Alignment>Center</Alignment>
                    <Resize>0.0</Resize>
                    <Size>
                        <Component>Default</Component>
                    </Size>
                </Row>
            </Rows>
            <Components>
                <Label col="0" colSpan="1" halign="Center" id="lblTitle" name="lblTitle" row="0" rowSpan="1" valign="Default">
                    <Text>@{entity.name}</Text>
                </Label>
                <List col="0" colSpan="1" entity="@{entity}" halign="Default" id="list" name="list" row="1" rowSpan="1" valign="Default"/>
                <Button col="0" colSpan="1" halign="Center" id="btnNew" name="btnNew" row="2" rowSpan="1" valign="Default">
                    <Label>New</Label>
                    <Entity>@{entity.qualifiedName}</Entity>
                    <Task>new</Task>
                    <Icon/>
                    <HoverIcon/>
                </Button>
            </Components>
        </Grid>
    </Layout>
    <Server/>
    <Client/>
    <Params>
        <Parameter defaultValue="@{metadata.getMetadata(senroContext.get(senroContext.MAIN_ENTITY))}" name="entity" type="org.senro.metadata.MetadataClass"/>
    </Params>
    <Associations/>
</ComponentTemplate>
