<?xml version="1.0"?>
<ComponentTemplate xmlns="http://www.siveco.ro/senro/ComponentTemplate" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.siveco.ro/senro/ComponentTemplate ComponentTemplate.xsd">
	<Layout>
		<Grid id="grid1" name="grid1">
			<Columns>
				<Column>
					<Alignment>Left</Alignment>
				</Column>
			</Columns>

			<Rows>
				<Row>
					<Alignment>Middle</Alignment>
				</Row>
				<Row>
					<Alignment>Middle</Alignment>
				</Row>
			</Rows>

			<Components>
				<List id="list" name="list" entity="@{entity}" row="0" col="0" />
				<Button id="btnSelect" name="btnSelect" row="1" col="0" halign="Center">
					<Label>Select</Label>
					<Entity>@{entity.qualifiedName}</Entity>
					<Task>select</Task>
				</Button>
			</Components>
		</Grid>
	</Layout>

	<Server>
	</Server>
	
	<Client>
	</Client>

	<Params>
		<Parameter name="entity" type="org.senro.metadata.MetadataClass" defaultValue="@{metadata.getMetadata(senroContext.get(senroContext.MAIN_ENTITY))}" />
	</Params>

	<Associations/>
</ComponentTemplate>
