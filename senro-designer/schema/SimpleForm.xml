<?xml version="1.0"?>
<ComponentTemplate xmlns="http://www.siveco.ro/senro/DesignerComponent" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.siveco.ro/senro/DesignerComponent ComponentTemplate.xsd">
	<Layout>
		<Grid id="grid1" name="grid1">
			<Columns>
				<Column>
					<Alignment>Left</Alignment>
				</Column>
				<Column>
					<Alignment>Left</Alignment>
				</Column>
			</Columns>

			<Rows>
				<Row>
					<Alignment>Middle</Alignment>
				</Row>
				<Row>
					<Alignment>Middle</Alignment>
				</Row>
				<Row>
					<Alignment>Middle</Alignment>
				</Row>
			</Rows>

			<Components>
				<GridAllocatorRenderer id="gridRenderer" name="gridRenderer" gridAllocator="@{gridAllocator}" row="0" col="0" colSpan="2" />
				<Button id="btnBack" name="btnBack" row="1" col="0">
					<Label>Back</Label>
				</Button>
				<Button id="btnSave" name="btnSave" row="1" col="1">
					<Label>Save</Label>
				</Button>
				<TabPanel id="tabPanel" name="tabPanel" row="2" col="0" colSpan="2">
					<Iterator id="tabIter" name="tabIter" list="@{entity.properties}">
						<Conditional>
							<If condition="@{tabIter.currentItem.isMany}">
								<TabPage title="@{tabIter.currentItem.type}">
									<Template file="SimpleList.xml">
										<Param name="entity" value="@{metadataManager.getMetadata(tabIter.currentItem.type)}" />
									</Template>
								</TabPage>
							</If>
						</Conditional>
					</Iterator>
				</TabPanel>
			</Components>
		</Grid>
	</Layout>

	<Server>
		<GridAllocator id="gridAllocator1" name="gridAllocator" columns="4" entity="@{entity}"/>
	</Server>
	
	<Client>
	</Client>

	<Params>
		<Parameter name="entity" type="org.senro.metadata.MetadataClass"/>
		<Parameter name="metadataManager" type="org.senro.metadata.MetadataManager"/>
	</Params>

	<Associations/>
</ComponentTemplate>
